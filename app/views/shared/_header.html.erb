<div class="flex flex-col mx-auto">
  <div class="flex justify-center">
    <h1 class="text-5xl font-semibold mt-12">VaxSpotter</h1>
  </div>
  <nav class="pt-10 pb-8 flex justify-center space-x-6 text-xl font-light text-blue-700">
    <div><%= link_to "home", "/", class: "hover:underline hover:text-blue-600" %></div>
    <div><%= link_to "about", "/about", class: "hover:underline hover:text-blue-600" %></div>
    <div><%= link_to "help", "/help", class: "hover:underline hover:text-blue-600" %></div>
    <% if session[:current_user] %>
      <div><%= link_to "admin", "/admin", class: "hover:underline hover:text-blue-600" %></div>
      <div><%= link_to "locations", locations_path, method: "get", class: "hover:underline hover:text-blue-600" %></div>
      <div><%= link_to "appointments", appointments_path, method: "get", class: "hover:underline hover:text-blue-600" %></div>
    <% end %>
  </nav>
